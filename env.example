# PaperTrader Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Environment Configuration
# Set to "production" for production deployment (enables security features)
# Set to "development" for local development
ENVIRONMENT=development

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=papertrader
# IMPORTANT: In production, DATABASE_URL must include sslmode=require or sslmode=verify-full
# Example: postgres://user:pass@host:5432/papertrader?sslmode=require

# Backend Configuration
PORT=8080
# WARNING: In production, JWT_SECRET must be:
# - At least 32 characters long
# - A strong random string (use: openssl rand -base64 32)
# - Different from the default value
# Application will fail to start in production if default value is used
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION
FRONTEND_URL=http://localhost:3000

# External API Keys
MARKETSTACK_API_KEY=your_marketstack_api_key_here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_DB=0

# Frontend Configuration
REACT_APP_API_URL=/api
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Email Service Configuration (Resend)
# Sign up at https://resend.com to get your API key
# Free tier: 3,000 emails/month
RESEND_API_KEY=re_xxxxxxxxxxxxx
FROM_EMAIL=noreply@yourdomain.com

# Optional: Request Configuration (defaults shown)
# MAX_REQUEST_SIZE=1048576  # 1MB in bytes
# REQUEST_TIMEOUT_SECONDS=30

